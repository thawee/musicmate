<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient base background -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Gentle translucent gradient overlay -->
            <gradient
                android:startColor="#66FFFFFF"
            android:endColor="#33FFFFFF"
            android:angle="45" />

            <!-- Optional: soft border or outline -->
            <stroke
                android:width="1dp"
                android:color="#1FFFFFFF" />

            <!-- Rounded bottom edges to blend better -->
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp" />
        </shape>
    </item>

    <!-- Slanted overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners android:radius="0dp" />
            <pathData>
                M0,0 L1000,0 L1000,120 L0,180 Z
            </pathData>
        </shape>
    </item>
</layer-list>
