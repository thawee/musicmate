<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft blur-like background (semi-transparent dark) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D91A1A1A" /> <!-- 85% dark, clean neutral -->
        </shape>
    </item>

    <!-- Smooth depth gradient (top darker â†’ bottom lighter) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A000000"
            android:centerColor="#0DFFFFFF"
            android:endColor="#00000000"
            android:angle="270" />
        </shape>
    </item>

    <!-- Crisp but subtle bottom divider -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="#40FFFFFF" /> <!-- 25% white for OLED clarity -->
        </shape>
    </item>

</layer-list>
