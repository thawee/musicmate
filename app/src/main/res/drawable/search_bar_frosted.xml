<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base translucent surface -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" /> <!-- slightly darker than #26 -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Subtle vertical gradient for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#28FFFFFF"
                android:endColor="#08FFFFFF"
                android:angle="90" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Soft edge stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#22FFFFFF" />
        </shape>
    </item>

</layer-list>
