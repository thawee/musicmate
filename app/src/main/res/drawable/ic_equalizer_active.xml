<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:name="equalizer"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">

            <group
                android:name="bars"
                android:pivotX="12"
                android:pivotY="12">

                <!-- Left Bar -->
                <path
                    android:name="bar1"
                    android:fillColor="?attr/colorPrimary"
                    android:pathData="M5,10 h3 v4 h-3 z"
                    android:strokeWidth="0" />

                <!-- Middle Bar -->
                <path
                    android:name="bar2"
                    android:fillColor="?attr/colorPrimaryContainer"
                    android:pathData="M10,8 h3 v8 h-3 z"
                    android:strokeWidth="0" />

                <!-- Right Bar -->
                <path
                    android:name="bar3"
                    android:fillColor="?attr/colorPrimary"
                    android:pathData="M15,6 h3 v12 h-3 z"
                    android:strokeWidth="0" />
            </group>
        </vector>
    </aapt:attr>

    <!-- Animate vertical scale on each bar -->
    <target android:name="bar1" android:animation="@animator/equalizer_bar1" />
    <target android:name="bar2" android:animation="@animator/equalizer_bar2" />
    <target android:name="bar3" android:animation="@animator/equalizer_bar3" />
</animated-vector>
