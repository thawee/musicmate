<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#4D000000" /> <corners
            android:topLeftRadius="@dimen/dimen_4_dp"
            android:topRightRadius="@dimen/dimen_4_dp"
            android:bottomLeftRadius="@dimen/dimen_4_dp"
            android:bottomRightRadius="@dimen/dimen_8_dp" />
        </shape>
    </item>

    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <stroke
                android:width="1dp"
                android:color="@color/grey600_transparent" />
            <corners
                android:topLeftRadius="@dimen/dimen_4_dp"
                android:topRightRadius="@dimen/dimen_4_dp"
                android:bottomLeftRadius="@dimen/dimen_4_dp"
                android:bottomRightRadius="@dimen/dimen_8_dp" />
        </shape>
    </item>

</layer-list>