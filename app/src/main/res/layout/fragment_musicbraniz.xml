    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/editorCardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_48_dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/spacing_xsmall"
        app:cardUseCompatPadding="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/shadow_below">
            <!--
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"> -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_8_dp"
                    android:layout_marginTop="@dimen/dimen_4_dp"
                    android:layout_marginLeft="@dimen/dimen_8_dp"
                    android:layout_marginRight="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/shape_border_back"
                    >
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/filter_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4_dp"
                        android:layout_marginLeft="@dimen/dimen_8_dp"
                        android:layout_marginRight="@dimen/dimen_8_dp"
                        android:layout_marginBottom="@dimen/dimen_8_dp"
                        android:layout_gravity="center"
                        android:background="@color/black">

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/filter_title"
                            android:layout_marginLeft="@dimen/dimen_2_dp"
                            android:layout_marginRight="@dimen/dimen_2_dp"
                            app:chipIcon="@drawable/ic_song_black_24dp"
                            app:checkedIconVisible="false"
                            app:closeIconVisible="false"
                            android:text="Title"/>

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/filter_artist"
                            android:layout_marginLeft="@dimen/dimen_2_dp"
                            android:layout_marginRight="@dimen/dimen_2_dp"
                            app:chipIcon="@drawable/ic_artist_black_24dp"
                            app:checkedIconVisible="false"
                            app:closeIconVisible="false"
                            android:text="Artist"/>

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/filter_album"
                            android:layout_marginLeft="@dimen/dimen_2_dp"
                            android:layout_marginRight="@dimen/dimen_2_dp"
                            app:chipIcon="@drawable/ic_album_black_24dp"
                            app:checkedIconVisible="false"
                            app:closeIconVisible="false"
                            android:text="Album"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
