<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/shape_header_left_menu"
    android:orientation="vertical"
    android:padding="4dp"
    android:paddingLeft="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/storage_size1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="@dimen/dimen_2_dp"
            android:paddingTop="2dp"
            android:text="Storages"
            android:textStyle="bold"
            android:textColor="@color/grey200"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/storage_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dimen_4_dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:padding="1dp">
    </LinearLayout>
</LinearLayout>