<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_dark_blur"
    android:elevation="8dp"
    android:clipToOutline="true"
    android:outlineProvider="background"
    android:layout_margin="12dp"
    tools:ignore="UseCompoundDrawables">

    <!-- Signal Path Title and Lossless Indicator -->
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_dialog_header_gradient"
        android:padding="@dimen/dimen_14_dp">

        <ImageView
            android:id="@+id/title_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rounded_speaker_24"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio Output"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/quality_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lossless"
            android:textColor="#8BC34A"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_12_dp">

    <!-- Signal Path Container -->
    <LinearLayout
        android:id="@+id/signal_path_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#555555" />

    <!-- DLNA Players Header (Clickable) -->
    <LinearLayout
        android:id="@+id/players_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Available Players"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/expand_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_expand_more"
            android:rotation="180"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <!-- DLNA Players List (Collapsible) -->
    <LinearLayout
        android:id="@+id/dlna_players_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>