<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_8_dp"
    android:layout_marginRight="@dimen/dimen_8_dp"
    android:background="@drawable/selector_item"
    android:paddingTop="@dimen/dimen_1_dp"
    android:paddingBottom="@dimen/dimen_2_dp">

    <LinearLayout
        android:id="@+id/item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_60_dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginEnd="@dimen/dimen_2_dp"
        android:background="@drawable/shape_item_background"
        android:orientation="vertical"
        android:paddingStart="34dp"
        android:paddingBottom="@dimen/dimen_4_dp"
        tools:ignore="RtlSymmetry">
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:ellipsize="end"
            android:fontFamily="@font/sfthonburi_bold"
            android:maxLines="1"
            android:paddingTop="1dp"
            android:paddingBottom="@dimen/dimen_4_dp"
            android:text="@{title}"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface" />
        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end" android:fontFamily="@font/sfthonburi_regular"
            android:paddingBottom="@dimen/dimen_8_dp"
            android:singleLine="true"
            android:text="@{subtitle}"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_imageFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_2_dp"
        android:background="@drawable/shape_item_coverart_background">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_image_coverart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/dimen_2_dp"
            android:scaleType="fitCenter"
            android:importantForAccessibility="no" app:shapeAppearanceOverlay="@style/ShapeAppearance.RoundedImageView"
            tools:src="@tools:sample/avatars" />
    </FrameLayout>
</RelativeLayout>