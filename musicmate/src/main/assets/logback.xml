<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="Logcat"
        class="ch.qos.logback.classic.android.LogcatAppender">
        <encoder>
            <Pattern>%date %level %msg%n</Pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="Logcat" />
    </root>

</configuration>