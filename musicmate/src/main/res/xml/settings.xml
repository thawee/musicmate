    <PreferenceCategory android:title="@string/preferences_sub_appearance"
        android:summary="Music Mate Look &amp; Feel.">
        <SwitchPreferenceCompat
            android:key="preference_night_mode_only"
            android:summary="Display Night mode only."
            android:title="Always on Night Mode"
            android:defaultValue="false"/>
        <SwitchPreferenceCompat
            android:key="preference_show_storage_space"
            android:summary="Show Storage space on left menu."
            android:title="Display Storage space"
            android:defaultValue="true"/>
        <!--
        <SwitchPreferenceCompat
            android:key="preference_notification"
            android:summary="Show listening song details on notification."
            android:title="Enable Notification"
            android:defaultValue="true"/> -->
        <SwitchPreferenceCompat
            android:key="preference_prefix_title_with_track_number"
            android:summary="Show track number prefix to song's title."
            android:title="Show Track Number"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_sub_next_song"
        android:summary="Now Playing Song Notification.">
        <SwitchPreferenceCompat
            android:key="preference_open_now_playing"
            android:summary="Always open song details on next playing song."
            android:title="Open TAGs Screen for Now Playing"
            android:defaultValue="false"/>
        <SwitchPreferenceCompat
            android:key="preference_follow_now_playing"
            android:summary="Always open song details following playing song."
            android:title="Refresh TAGs Screen for Now Playing"
            android:defaultValue="false"/>
        <SwitchPreferenceCompat
            android:key="preference_default_next_by_media_buttons"
            android:summary="Simulate media buttons to play next song on Music Player."
            android:title="Media Buttons"
            android:defaultValue="true"/>
        <SwitchPreferenceCompat
            android:key="preference_vibrate_on_next_song"
            android:summary="Vibrate when trigger next song for Music Player."
            android:title="Vibrate"
            android:defaultValue="false"/>
    </PreferenceCategory>
