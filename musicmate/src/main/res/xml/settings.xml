    <PreferenceCategory
        android:summary="Streaming">
    <SwitchPreferenceCompat
        android:key="preference_dlna_media_server"
        android:summary="Enable DLNA MediaServer, expose music library to others streaming devices."
        android:title="DLNA MediaServer"
        android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:summary="User Interface">
        <SwitchPreferenceCompat
            android:key="preference_night_mode_only"
            android:summary="Display Night mode only."
            android:title="Always on Night Mode"
            android:defaultValue="false"/>
        <SwitchPreferenceCompat
            android:key="preference_show_storage_space"
            android:summary="Show Storage space on left menu."
            android:title="Display Storage space"
            android:defaultValue="true"/>
        <SwitchPreferenceCompat
            android:key="preference_prefix_title_with_track_number"
            android:summary="Prefix track number to song's title."
            android:title="Show Track Number"
            android:defaultValue="false"/>
