<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_item_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_title_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="@dimen/dimen_4_dp"
            android:layout_toRightOf="@id/item_imageFrame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/sfthonburi_bold"
                android:maxLines="1"
                android:paddingTop="1dp"
                android:text="@{title}"
                android:textColor="@color/grey100"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="@font/sfthonburi_regular"
                android:singleLine="true"
                android:text="@{subtitle}"
                android:textColor="@color/grey300"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/item_type_label"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_background_unknown"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_2_dp"
                android:paddingRight="@dimen/dimen_2_dp"
                android:text="FLAC"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_bit_per_sampling"
                android:layout_width="@dimen/dimen_32_dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_2_dp"
                android:layout_toRightOf="@id/item_type_label"
                android:background="@drawable/shape_background_unknown"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_2_dp"
                android:paddingRight="@dimen/dimen_2_dp"
                android:text="24bits"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_sampling_rate"
                android:layout_width="@dimen/dimen_42_dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_2_dp"
                android:layout_toRightOf="@id/item_bit_per_sampling"
                android:background="@drawable/shape_background_unknown"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_2_dp"
                android:paddingRight="@dimen/dimen_2_dp"
                android:text="44.1kHz"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="bold" />
            <!--
            <TextView
                android:id="@+id/item_sampling_rate"
