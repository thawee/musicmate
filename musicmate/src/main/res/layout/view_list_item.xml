                android:layout_toRightOf="@id/item_sampling_rate"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/shape_bottom_background" /> -->

            <ImageView
                android:id="@+id/item_loudness_icon"
                android:layout_width="@dimen/dimen_48_dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/dimen_2_dp"
                android:layout_toRightOf="@id/item_sampling_rate"
                android:paddingLeft="@dimen/dimen_2_dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_format_mqa_white" />

            <ImageView
                android:id="@+id/item_hires_icon"
                android:layout_width="@dimen/dimen_52_dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/dimen_2_dp"
                android:layout_toRightOf="@id/item_loudness_icon"
                android:paddingLeft="@dimen/dimen_2_dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_format_mqa_white" />

            <ImageView
                android:id="@+id/item_src_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_2_dp"
                android:layout_toRightOf="@id/item_hires_icon"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_cd" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
                <!--
                <ImageView
                    android:id="@+id/item_duration"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:padding="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_bottom_background"/>

                <ImageView
                    android:id="@+id/item_file_size"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:padding="1dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_bottom_background"/> -->

                <TextView
                    android:id="@+id/item_duration"
                    android:layout_width="36dp"
                    android:layout_height="16dp"
                    android:background="@drawable/shape_background_unknown"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_1_dp"
                    android:paddingRight="@dimen/dimen_1_dp"
                    android:text="50.00 MB"
                    android:fontFamily="@font/oswald_bold"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_file_size"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="@dimen/dimen_1_dp"
                    android:layout_marginRight="@dimen/dimen_1_dp"
                    android:background="@drawable/shape_background_unknown"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_2_dp"
                    android:paddingRight="@dimen/dimen_2_dp"
                    android:text="50.00 MB"
                    android:fontFamily="@font/oswald_bold"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/item_imageFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        android:layout_marginRight="@dimen/dimen_8_dp"
        android:background="@drawable/shape_item_coverart_background">
        <ImageView
            android:id="@+id/item_image_coverart"
            android:layout_width="68dp"
            android:layout_height="64dp"
            android:padding="@dimen/dimen_4_dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/item_audiophile_label"
            android:layout_width="@dimen/dimen_24_dp"
            android:layout_height="@dimen/dimen_16_dp"
            android:layout_marginLeft="@dimen/dimen_4_dp"
            android:layout_marginRight="@dimen/dimen_4_dp"
            android:layout_marginBottom="@dimen/dimen_4_dp"
            android:layout_gravity="bottom|right"
            app:tint="@color/audiophile_background"
            android:scaleType="fitXY"
            android:src="@drawable/ic_audiophile"/>
