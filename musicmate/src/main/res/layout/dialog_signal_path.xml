<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_12_dp"
    android:paddingRight="@dimen/dimen_12_dp"
    android:layout_margin="@dimen/dimen_8_dp"
    android:paddingStart="@dimen/dimen_12_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_64_dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_56_dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/panel_source_img"
                    android:layout_width="@dimen/dimen_56_dp"
                    android:layout_height="@dimen/dimen_16_dp"
                    android:layout_gravity="center_horizontal"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey300"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="24dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey600"
                android:layout_marginRight="@dimen/dimen_8_dp"
                android:layout_marginLeft="@dimen/dimen_8_dp"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/panel_source_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Source"
                        android:gravity="left|center_horizontal"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        android:layout_gravity="left"
                        android:textColor="@color/grey300"
                        android:textSize="26sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64_dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dimen_56_dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/panel_player_img"
                android:layout_width="@dimen/dimen_32_dp"
                android:layout_height="@dimen/dimen_32_dp"
                android:background="@drawable/shape_border_grey"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_4_dp"
                android:padding="@dimen/dimen_2_dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey300"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="@dimen/dimen_24_dp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey600"
            android:layout_marginRight="@dimen/dimen_8_dp"
            android:layout_marginLeft="@dimen/dimen_8_dp"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/panel_player_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_horizontal"
                    android:text="Player"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:layout_gravity="left"
                    android:textColor="@color/grey300"
                    android:textSize="26sp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_24_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dimen_56_dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/panel_output_img"
                android:layout_width="@dimen/dimen_40_dp"
                android:layout_height="27dp"
                android:background="@drawable/shape_border_grey"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dimen_2_dp"
                android:layout_marginRight="@dimen/dimen_4_dp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey600"
            android:layout_marginRight="@dimen/dimen_8_dp"
            android:layout_marginLeft="@dimen/dimen_8_dp"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/panel_output_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Output Device"
                android:textColor="@color/grey300"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/panel_output_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Output"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="left|center_horizontal"
                    android:textColor="@color/grey300"
                    android:textSize="26sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>