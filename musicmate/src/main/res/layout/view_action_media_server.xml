<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_round_actionview_black">
    <Button
        android:id="@+id/manageServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_24_dp"
        android:text="@string/upnp_server_stop_server" />
    <!--
    <TextView
        android:id="@+id/server_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:textSize="16sp"
        android:text="IP Address"/> -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_marginBottom="@dimen/dimen_24_dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_24_dp"
        android:layout_marginRight="@dimen/dimen_24_dp"
        android:padding="@dimen/dimen_24_dp"
        android:background="@drawable/shape_round_actionview_black">
        <TextView
            android:id="@+id/server_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Status: started"/>
        <TextView
            android:id="@+id/server_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:text="To enjoy your rich music library across multiple devices, start MusicMate DLNA/UPnP media server to stream music for DLNA client and controller."/>
