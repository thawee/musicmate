<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <!-- View background color -->
            <solid
                android:color="@color/material_color_blue_grey_900" >
            </solid>

            <!-- View border color and width -->
            <stroke
                android:width="1dp"
                android:color="@color/grey600" >
            </stroke>

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="4dp"   >
            </corners>
        </shape>
    </item>
    <item
        android:top="@dimen/dimen_32_dp"
        android:bottom="@dimen/dimen_32_dp"
        android:left="@dimen/dimen_32_dp"
        android:right="@dimen/dimen_32_dp">
        <shape android:shape="rectangle" >

            <!-- View background color -->
            <solid
                android:color="@color/black" >
            </solid>

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="8dp"   >
            </corners>

        </shape>
    </item>

</layer-list>