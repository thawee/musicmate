<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apincer.android.tripmate" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme"
        android:name="apincer.android.tripmate.Application">
        <activity
            android:name="apincer.android.tripmate.activity.SplashScreenActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="apincer.android.tripmate.activity.ListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="apincer.android.tripmate.activity.SearchResultsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="apincer.android.tripmate.activity.ListDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="apincer.android.tripmate.activity.MapViewActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="apincer.android.tripmate.activity.MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/MapTheme">
        </activity>
        <activity
            android:name="apincer.android.tripmate.activity.DrivingDetailsActivity"
            android:label="@string/title_activity_driving_details" >
        </activity>
        <activity
            android:name="apincer.android.tripmate.activity.AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>
    </application>

</manifest>
